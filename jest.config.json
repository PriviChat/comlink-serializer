{
	"preset": "ts-jest/presets/default-esm",
	"testEnvironment": "node",
	"testMatch": ["**/*.(test|spec).ts"],
	"collectCoverageFrom": ["<rootDir>/src/**/*.ts", "!<rootDir>/src/types/**/*.ts"],
	"transform": {
		"^.+\\.ts?$": [
			"ts-jest",
			{
				"diagnostics": {
					"exclude": ["!**/*.(spec|test).ts", "test/**/*.ts"],
					"isolatedModules": false
				}
			}
		]
	}
}
