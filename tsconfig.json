{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./config/tsbase.json",
	"compilerOptions": {
		"target": "ES2015",
		"module": "ESNext",
		"outDir": "dist/esm",
		"declaration": false,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts", "rollup.config.ts", "rollup.test.config.ts"],
	"exclude": ["node_modules/**", "src/**/*.test.ts", "src/__tests__/**"]
}
