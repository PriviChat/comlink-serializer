{
  "name": "comlink-serializer",
  "version": "1.0.11",
  "description": "Comlink Serializer makes Comlink and WebWorkers more enjoyable.",
  "keywords": [
    "typescript",
    "comlink",
    "serializer"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/lib/dts/comlink-serializer.d.ts",
      "import": "./dist/lib/esm/comlink-serializer.js",
      "default": "./dist/lib/umd/comlink-serializer.js"
    }
  },
  "main": "./dist/lib/umd/comlink-serializer.js",
  "types": "./dist/lib/dts/comlink-serializer.d.ts",
  "files": [
    "./dist/**/*"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run bundle",
    "build": "run-p build:esm build:dts",
    "build:esm": "tsc -p ./tsconfig/esm.json",
    "build:dts": "tsc -p ./tsconfig/dts.json",
    "build:test": "tsc -p ./tsconfig/test.json",
    "bundle": "run-p bundle:esm bundle:umd bundle:dts",
    "bundle:esm": "rollup --config ./rollup/esm.ts --configPlugin typescript",
    "bundle:umd": "rollup --config ./rollup/umd.ts --configPlugin typescript",
    "bundle:dts": "rollup --config ./rollup/dts.ts --configPlugin typescript",
    "bundle:test": "rollup --config ./rollup/test.ts --configPlugin typescript",
    "prepack": "rimraf dist/src dist/build",
    "pretest": "run-s clean build build:test bundle:test",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --config ./jest/src.config.ts --coverage",
    "test:lib": "NODE_OPTIONS=--experimental-vm-modules npx jest --config ./jest/lib.config.ts --coverage",
    "testCJS": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "typecheck": "tsc --noEmit",
    "cleanjs": "find ./src -name '*.js' | xargs rm"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged ng lint ng test",
      "pre-push": "ng build --aot true"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PriviChat/comlink-serializer.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Josh Manton",
    "email": "josh.manton@privichat.com",
    "url": "https://github.com/josh-manton"
  },
  "engines": {
    "node": ">=14.0"
  },
  "bugs": {
    "url": "https://github.com/PriviChat/comlink-serializer/issues"
  },
  "homepage": "https://github.com/PriviChat/comlink-serializer#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.4",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.1.0",
    "@rollup/plugin-typescript": "^10.0.1",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.2.4",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.11.11",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "comlink": "^4.3.1",
    "commitizen": "^4.2.5",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^3.6.0",
    "rollup-plugin-dts": "^5.0.0",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "web-worker": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "tslib": "^2.4.1",
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "comlink": "^4.3.1"
  }
}
