{
  "name": "comlink-serializer",
  "version": "1.0.0",
  "description": "ComlinkSerializer makes Comlink and WebWorkers more enjoyable.",
  "keywords": [
    "typescript",
    "comlink",
    "serializer"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/comlink-serializer.js",
  "module": "./dist/comlink-serializer.esm.js",
  "types": "./dist/comlink-serializer.d.ts",
  "exports": [
    "./dist/comlink-serializer.js",
    "./dist/comlink-serializer.esm.js",
    "./dist/comlink-serializer.d.ts"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "postinstall": "npm --prefix ./node_modules/comlink i && npm --prefix ./node_modules/comlink run build",
    "prebuild": "npm run clean",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "clean": "rimraf dist",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "pretest": "npm run build",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged ng lint ng test",
      "pre-push": "ng build --aot true"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PriviChat/comlink-serializer.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Josh Manton",
    "email": "josh.manton@privichat.com",
    "url": "https://github.com/josh-manton"
  },
  "engines": {
    "node": ">=14.0"
  },
  "bugs": {
    "url": "https://github.com/PriviChat/comlink-serializer/issues"
  },
  "homepage": "https://github.com/PriviChat/comlink-serializer#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-json": "^5.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.1.0",
    "@rollup/plugin-typescript": "^10.0.1",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.5.2",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "comlink": "git+https://github.com/afbarbaro/comlink.git",
    "commitizen": "^4.2.5",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "get-tsconfig": "^4.2.0",
    "husky": "^8.0.2",
    "i": "^0.3.7",
    "jest": "^29.3.1",
    "lodash-es": "^4.17.21",
    "npm": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^3.5.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "semantic-release": "^19.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "web-worker": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "comlink": "github:afbarbaro/comlink"
  }
}
